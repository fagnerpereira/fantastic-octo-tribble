<%# Based on wireframe-m6.html %>
<div class="w-full h-screen flex flex-col justify-center items-center p-6 relative overflow-hidden bg-gray-900 text-white">
  <div class="absolute top-0 left-0 w-full h-full opacity-20 pointer-events-none" style="background-image: radial-gradient(#f97316 1px, transparent 1px); background-size: 30px 30px;"></div>

  <div class="w-full max-w-sm mx-auto">
    <div class="flex-1 flex flex-col justify-center items-center text-center relative z-10">
      <div class="w-32 h-32 bg-gray-800 rounded-2xl flex items-center justify-center mb-8 shadow-2xl border-4 border-gray-700 transform -rotate-3">
        <i class="ph-fill ph-hexagon text-7xl text-orange-500"></i>
      </div>
      <h1 class="text-6xl font-black mb-2 tracking-tighter uppercase">ROCHA</h1>
      <div class="h-1 w-20 bg-orange-500 mb-4"></div>
      <p class="text-gray-300 text-lg font-medium max-w-xs">
        Trabalho firme.<br>Preço justo.<br>Sem leilão.
      </p>

      <div class="mt-12 space-y-4 w-full max-w-sm">
        <%= form_with(url: login_path, class: "space-y-4") do |form| %>
          <div>
            <%= form.label :email, "Email", class: "sr-only" %>
            <%= form.email_field :email, placeholder: "seu@email.com", class: "w-full bg-gray-800 border-2 border-gray-700 text-white font-bold py-4 px-4 rounded-xl focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          <div>
            <%= form.label :password, "Senha", class: "sr-only" %>
            <%= form.password_field :password, placeholder: "••••••••", class: "w-full bg-gray-800 border-2 border-gray-700 text-white font-bold py-4 px-4 rounded-xl focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          <div>
            <%= form.submit "ENTRAR NA ROCHA", class: "w-full bg-orange-600 text-white font-bold text-xl py-4 rounded-xl shadow-[0_4px_0_rgb(154,52,18)] hover:bg-orange-500 transition transform active:translate-y-1 active:shadow-none cursor-pointer" %>
          </div>
        <% end %>

        <%= link_to "CRIAR CONTA", sign_up_path, class: "block w-full bg-transparent border-2 border-gray-600 text-gray-300 font-bold text-lg py-4 rounded-xl hover:bg-gray-800 hover:border-gray-500 transition text-center" %>
      </div>
    </div>
  </div>
</div>
