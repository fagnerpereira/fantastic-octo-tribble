<div class="w-full max-w-7xl mx-auto p-4 md:p-8">
  <%# Header from wireframe-m6 "worker-feed" %>
  <div class="flex justify-between items-end mb-6">
    <div>
      <p class="text-gray-500 text-xs font-bold uppercase tracking-wide">Área do Profissional</p>
      <h2 class="text-2xl font-black text-gray-900 uppercase">Mural Rocha</h2>
    </div>
    <div class="bg-white px-3 py-1 rounded-lg border-2 border-gray-100 shadow-sm">
      <span class="text-xs font-bold text-gray-800 flex items-center gap-1">
        <i class="ph-fill ph-map-pin text-orange-500"></i>
        2km
      </span>
    </div>
  </div>

  <%# Job List %>
  <% if @jobs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" id="jobs-list">
      <% @jobs.each do |job| %>
        <div id="<%= dom_id(job) %>">
          <%= link_to job_path(job), class: "block bg-white rounded-xl shadow-sm border-b-4 border-gray-200 hover:border-orange-500 transition cursor-pointer group transform hover:-translate-y-1 duration-200" do %>
            <div class="p-5">
              <div class="flex justify-between items-start mb-3">
                <span class="text-white text-[10px] font-black uppercase tracking-wider bg-gray-900 px-2 py-1 rounded">Pedreiro</span>
                <span class="text-gray-400 text-xs font-bold">há <%= ((Time.current - job.created_at) / 60).to_i %> min</span>
              </div>
              <h3 class="text-xl font-black text-gray-900 mb-1 leading-tight uppercase"><%= job.title %></h3>
              <p class="text-gray-500 text-sm mb-4 line-clamp-2 font-medium"><%= job.description %></p>

              <div class="border-t-2 border-gray-100 pt-4 flex justify-between items-center bg-gray-50 -mx-5 -mb-5 px-5 py-3 mt-4">
                <div>
                  <p class="text-[10px] text-gray-400 font-black uppercase tracking-wide">Valor Líquido</p>
                  <p class="text-2xl font-black text-green-600">R$<%= job.price.to_i %></p>
                </div>
                <div class="w-10 h-10 bg-white border-2 border-gray-200 rounded-lg flex items-center justify-center group-hover:bg-orange-500 group-hover:border-orange-500 group-hover:text-white transition">
                  <i class="ph-bold ph-arrow-right text-xl"></i>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white p-8 rounded-2xl shadow-sm border-2 border-gray-100 text-center">
      <p class="text-gray-500 font-medium">Nenhum serviço disponível no momento.</p>
    </div>
  <% end %>
</div>
