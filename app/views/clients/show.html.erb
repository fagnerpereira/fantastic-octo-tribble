<div class="w-full max-w-7xl mx-auto p-4 md:p-8">
  <%# Header from wireframe-m6 "client-home" %>
  <div class="bg-gray-800 text-white p-6 rounded-2xl shadow-lg mb-6 relative overflow-hidden">
    <div class="absolute right-0 top-0 w-24 h-24 bg-orange-500 rounded-full filter blur-3xl opacity-20 -mr-10 -mt-10"></div>
    <p class="font-bold text-gray-400 text-sm uppercase tracking-wide mb-1">Área do Cliente</p>
    <h2 class="text-2xl font-black mb-6">
      Precisa de uma<br>mão forte?
    </h2>
    <%= link_to new_job_path, class: "bg-orange-500 text-white w-full md:w-auto inline-flex py-3 px-6 rounded-xl font-black shadow-md items-center justify-center gap-2 hover:bg-orange-600 transition uppercase text-sm tracking-wide" do %>
      <i class="ph-bold ph-plus"></i>
      <span>Publicar Vaga</span>
    <% end %>
  </div>

  <%# Job List %>
  <h3 class="text-gray-900 font-black text-sm uppercase tracking-wide mb-3 pl-1 flex justify-between items-center">
    <span>Serviços Ativos</span>
    <span class="bg-gray-200 text-gray-600 text-[10px] px-2 py-0.5 rounded-full"><%= @jobs.count %></span>
  </h3>

  <% if @jobs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @jobs.each do |job| %>
        <%= link_to job_path(job), class: "block bg-white p-5 rounded-2xl shadow-sm border-2 border-gray-100 cursor-pointer hover:border-gray-900 transition group" do %>
          <div class="flex justify-between items-start mb-3">
            <div class="bg-orange-100 text-orange-700 w-10 h-10 rounded-lg flex items-center justify-center">
              <i class="ph-fill ph-wrench text-xl"></i>
            </div>
            <span class="bg-green-100 text-green-800 text-[10px] font-black uppercase px-3 py-1 rounded-full"><%= job.status.humanize %></span>
          </div>
          <h3 class="font-black text-gray-900 text-lg"><%= job.title %></h3>
          <p class="text-gray-500 text-sm font-medium">R$<%= job.price.to_i %></p>

          <% if job.worker %>
            <div class="mt-4 pt-3 border-t border-gray-100 flex items-center gap-3">
              <div class="w-8 h-8 bg-gray-800 rounded-full flex items-center justify-center text-xs font-bold text-white border-2 border-white shadow-sm"><%= job.worker.name.first.upcase %></div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-orange-600 transition"><%= job.worker.name %></span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white p-8 rounded-2xl shadow-sm border-2 border-gray-100 text-center">
      <p class="text-gray-500 font-medium">Você ainda não publicou nenhum serviço.</p>
    </div>
  <% end %>
</div>
